{
  "manifest_version": 2,
  "name": "AP News Summarizer",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
